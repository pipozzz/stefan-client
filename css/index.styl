@import './mixin'

*
  -webkit-tap-highlight-color: rgba(0,0,0,0); 
  margin 0px
  padding 0px

body
  background #f8f8f8
  color #000
  
  &.selected
    background #dadada

#content
  margin 150px 150px
  font-size 25px
  font-family 'Goudy Bookletter 1911', serif;
  line-height 150%
  text-align justify
  
  .phrase
    padding-left 5px
    padding-right 5px
    border-radius(3px)
  
    &.selected
      background #f8f8f8
    
    .hilight
      background #f8f8c0
      border-radius(3px)

#bounds
  position absolute
  left 0px
  top 0px
  width 0px
  height 0px
  // border 1px solid red

.image
  z-index 15
  background #000
  width 130px
  height 100px
  position absolute
  // border 3px solid #fff
  box-shadow(0px 1px 10px rgba(0, 0, 0, 0.5))
  
  &.open
    -webkit-transform-origin 0% 0%
    z-index 20

div.preview
  position absolute
  z-index 25
  -webkit-transform-origin 0% 0%
  
  .content
    position relative
    width 100%
    height 100%
    
    img
      z-index 30
    
    a.button
      cursor pointer
      position absolute
      bottom 10px
      z-index 35
      display block
      width 36px
      height 34px
      background red
      
      &.like
        background url(/button_like.png)
        right 10px
      &.dislike
        left 10px
        background url(/button_dislike.png)
    
    .images
      // position absolute
      // left 0px
      // top 0px
      width 100%
      height 100%
      

canvas
  z-index 10
  position absolute
  top 0px
  left 0px
  pointer-events none