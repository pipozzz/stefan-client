@import './mixin'

*
  -webkit-tap-highlight-color: rgba(0,0,0,0); 

body
  background #f8f8f8
  color #000
  
  &.selected
    background #dadada

#content
  margin 150px 150px
  font-size 25px
  font-family 'Goudy Bookletter 1911', serif;
  line-height 150%
  text-align justify
  
  .phrase
    padding-left 5px
    padding-right 5px
    border-radius(3px)
  
    &.selected
      background #f8f8f8
    
    .hilight
      background #f8f8c0
      border-radius(3px)

#bounds
  position absolute
  left 0px
  top 0px
  width 0px
  height 0px
  border 1px solid red

.image
  background #000
  width 110px
  height 80px
  position absolute