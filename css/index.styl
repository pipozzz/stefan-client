@import './mixin'

*
  -webkit-tap-highlight-color: rgba(0,0,0,0); 
  margin 0px
  padding 0px

.fl
  float left

.fr
  float right

.hidden
  display none

body
  background #f8f8f8
  color #000
  font-family 'Goudy Bookletter 1911', serif;
  
  &.selected
    background #dadada

#content
  padding 150px 150px
  font-size 25px
  font-family 'Goudy Bookletter 1911', serif;
  line-height 150%
  text-align justify
  
  .phrase
    padding-left 5px
    padding-right 5px
    border-radius(3px)
  
    &.selected
      background #f8f8f8
    
    .hilight
      background #f8f8c0
      border-radius(3px)

#bounds
  position absolute
  left 0px
  top 0px
  width 0px
  height 0px
  // border 1px solid red

.image
  z-index 15
  background #000
  width 130px
  height 100px
  position absolute
  -webkit-perspective: 0
  // border 3px solid #fff
  box-shadow(0px 1px 10px rgba(0, 0, 0, 0.5))
  
  &.open
    -webkit-transform-origin 0% 0%
    z-index 20

div.preview
  position absolute
  z-index 25
  -webkit-transform-origin 0% 0%
  
  .content
    position relative
    width 100%
    height 100%
    
    img
      z-index 30
    
    a.button
      cursor pointer
      position absolute
      bottom 10px
      z-index 35
      display block
      width 36px
      height 34px
      background red
      
      &.like
        background url(/button_like.png)
        right 10px
      &.dislike
        left 10px
        background url(/button_dislike.png)
    
    .images
      // position absolute
      // left 0px
      // top 0px
      width 100%
      height 100%
      

canvas
  z-index 10
  position absolute
  top 0px
  left 0px
  pointer-events none

// Navigation
// ----------------------------------------------------------------------------

#navigation
  background #000
  height 60px
  
  .fl
    margin-left 10px
  .fr
    margin-right 10px
  
  .button
    cursor pointer
    display block
    width 45px
    height 33px
    background red
    float left
    border 1px solid #6b6b6b
    border-radius(3px)
    margin-right 5px
    margin-left 5px
    margin-top 12px
    
    &.smaller
      background url(/button_smaller.png)
    &.larger
      background url(/button_larger.png)
    &.plus
      background url(/button_add.png)
      input
        background red
        display block
        width 100%
        height 100%
        font-size 20px
        opacity 0
        cursor pointer
    &.game
      background url(/button_game.png)

// Game
// ----------------------------------------------------------------------------

#game
  h1
    margin-bottom 10px

  text-align center
  margin-top 50px
  
  .options
    width 400px
    margin auto
    margin-top 50px
    .option
      width 200px
      height 30px
      margin-bottom 20px
      float left
      font-size 25px
      border-box()
      cursor pointer
      &:hover
        border-bottom 2px solid #000

  .result
    h1
      padding-top 240px
      font-size 40px
    
    &.correct
      background url(/shape_correct.png) no-repeat center 60px
    
    &.wrong
      background url(/shape_wrong.png) no-repeat center 60px
    
    .button
      display block
      color #959595
      font-size 20px
      border 1px solid #bebebe
      width 150px
      margin auto
      margin-top 50px
      padding 10px 0px
      border-radius(3px)
      cursor pointer